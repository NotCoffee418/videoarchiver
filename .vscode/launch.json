{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Wails Dev",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "wails",
            "runtimeArgs": ["dev"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run Daemon Mode",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": ["--mode", "daemon"],
            "cwd": "${workspaceFolder}"
        }
    ]
}